        "poster": "img.lazy-common@data-src"
      }
    },
    "video_extraction": {
      "methods": [
        {
          "type": "direct_m3u8",
          "selector": "contentUrl:@text"
        },
        {
          "type": "regex",
          "pattern": "contentUrl: \"(.*?)\""
        }
      ]
