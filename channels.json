[
  {
    "id": "kanald",
    "name": "Kanal D",
    "base_url": "https://www.kanald.com.tr",
    "active": true,
    "headers": {
      "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36...",
      "Referer": "https://www.kanald.com.tr/"
    },
    "listings": [
      {
        "title": "Güncel Diziler",
        "path": "/diziler",
        "layout": "poster_grid", 
        "selectors": {
          "container": "div.item",
          "title": "img@alt",
          "url": "a@href",
          "poster": "img@data-src"
        }
      },
      {
        "title": "Arşiv",
        "path": "/diziler/arsiv",
        "layout": "list",
        "selectors": {
          "container": "div.item",
          "title": "img@alt",
          "url": "a@href",
          "poster": "img@src"
        }
      }
    ],
    "detail_page": {
      "selectors": {
        "title": "h1.dizi-isim@text",
        "description": ".sinopsis-text@text",
        "poster": "img.afis@src",
        "year": ".yil-deger@text",
        "tags": ".janr-etiket a@text"
      }
    },
    "episode_page": {
      "path_suffix": "/bolumler",
      "selectors": {
        "container": "#bolum-combobox option",
        "name": "self@text",
        "url": "self@value",
        "reverse_order": true
      }
    },
    "video_extraction": {
      "methods": [
        { "type": "iframe", "selector": "iframe[src*='youtube']" },
        { "type": "iframe", "selector": "iframe[src*='kanald']" },
        { "type": "regex", "pattern": "file: \"(.*?)\"" }
      ]
    }
  },
  {
    "id": "trt1",
    "name": "TRT 1",
    "base_url": "https://www.trt1.com.tr",
    "active": true,
    "listings": [
      {
        "title": "Tüm Diziler",
        "path": "/diziler?archive=false",
        "selectors": {
          "container": "div.grid_grid-wrapper__elAnh > div",
          "title": "div.card_card-title__IJ9af@text",
          "url": "a@href",
          "poster": "img@src"
        }
      }
    ],
    "detail_page": {
      "selectors": {
        "title": "h1@text",
        "description": "meta[name=description]@content",
        "poster": "picture img@src"
      }
    },
    "episode_page": {
      "path_suffix": "/bolum",
      "selectors": {
        "container": ".bolumler option",
        "name": "self@text",
        "url": "self@value"
      }
    },
    "video_extraction": {
      "methods": [
        { "type": "direct_m3u8" }
      ]
    }
  }
]
