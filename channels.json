        "path": "/diziler?archive=false&order=title_asc",
        "ishorizontal": true,
        "selectors": {
          "container": "div.grid_grid-wrapper__elAnh > div",
          "title": "div.card_card-title__IJ9af@text",
          "url": "a@href",
          "poster": "img@src"
        }
      },
      {
        "title": "Arşiv Diziler",
        "path": "/diziler?archive=true&order=title_asc",
        "ishorizontal": true,
        "selectors": {
          "container": "div.grid_grid-wrapper__elAnh > div",
          "title": "div.card_card-title__IJ9af@text",
          "url": "a@href",
          "poster": "img@src"
        }
      }
    ],
    "detail_page": {
      "selectors": {
        "title": "p.text_title__UMoMd@text",
        "description": "meta[name=description]@content",
        "poster": "img.card_card-image__T64bP@src",
        "tags": "",
        "year": "div.basic-dot_badge__1nsQT@text"
      }
    },
    "episode_page": {
      "path_suffix": "/bolum",
      "reverse_order": true,
      "selectors": {
        "container": "div.grid_grid-wrapper__elAnh > div.h-full.w-full > a",
        "name": "div.card_card-title__IJ9af@text",
        "url": "self@href"
      }
    },
    "video_extraction": {
      "methods": [
        {
          "type": "iframe",
          "selector": "iframe[src*='https']"
        },
        {
          "type": "youtube",
          "selector": "iframe[src*='youtube']"
        },
        {
          "type": "direct_m3u8"
        }
      ]
    }
  },
  {
